<% if ENV['ASPACE_LOCAL_LOGIN']  %>
<%= form_tag({:controller => "session",:action => "login"}, :method => "post", :class => "login mb-2") do %>
    <p class="alert alert-danger"><%= t "login.login_fail" %></p>
    <p class="alert alert-success"><%= t "login.login_success" %>.</p>
    <div class="form-group">
      <input id="user_username" type="text" name="username" size="30" placeholder="<%= t "login.username_placeholder" %>" class="form-control" aria-label="<%= t "login.username_aria_label" %>"/>
    </div>
    <div class="form-group">
      <input id="user_password" type="password" name="password" size="30" placeholder="<%= t "login.password_placeholder" %>" class="form-control" aria-label="<%= t "login.password_aria_label" %>"/>
    </div>
  <input class="mt-2 btn btn-primary navbar-btn" type="submit" name="commit" value="<%= t("login.login") %>" id="login" />
<% end %>
<% else %>
<a class="dropdown-item" href="<%= AppConfig[:frontend_proxy_prefix] %>auth/saml"><%= I18n.t("login.login") %></a>
<% end %>
